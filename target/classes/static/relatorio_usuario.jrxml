<jasperReport name="relatorio_usuario" topMargin="20" bottomMargin="20">
    <queryString language="SQL">
        <![CDATA[]]>
    </queryString>
    <field name="idSpotifyUsuario" class="java.lang.String"/>
    <field name="imagemUrlUsuario" class="java.lang.String"/>
    <field name="nomeUsuario" class="java.lang.String"/>
    <field name="topArtistas" class="java.util.List"/>
    <field name="playlists" class="java.util.List"/>
    <field name="musicasCurtidas" class="java.util.List"/>
    <detail>
        <band height="800">
            <staticText>
                <reportElement x="225" y="0" width="200" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[Dados do Spotify]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="20" width="200" height="20"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Informações do Usuário]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="50" width="400" height="20"/>
                <textFieldExpression><![CDATA["Usuário: " + $F{idSpotifyUsuario} + " - " + " (Nome: " + $F{nomeUsuario} + ")"]]></textFieldExpression>
            </textField>
            <image>
                <reportElement x="0" y="75" width="100" height="100"/>
                <imageExpression><![CDATA[$F{imagemUrlUsuario}]]></imageExpression>
            </image>
            <staticText>
            <reportElement x="0" y="200" width="200" height="20"/>
            <textElement>
                <font size="12" isBold="true"/>
            </textElement>
            <text><![CDATA[Músicas Curtidas]]></text>
        </staticText>
            <subreport>
                <reportElement x="0" y="190" width="400" height="60"/>
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{musicasCurtidas})]]></dataSourceExpression>
                <subreportExpression><![CDATA["src/main/resources/static/subrelatorio_musicas_curtidas.jasper"]]></subreportExpression>
            </subreport>
            <staticText>
                <reportElement x="0" y="570" width="200" height="20"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Playlists]]></text>
            </staticText>
            <subreport>
                <reportElement x="0" y="550" width="400" height="60"/>
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{playlists})]]></dataSourceExpression>
                <subreportExpression><![CDATA["src/main/resources/static/subrelatorio_playlists.jasper"]]></subreportExpression>
            </subreport>
            <staticText>
                <reportElement x="0" y="690" width="200" height="20"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Top Artistas]]></text>
            </staticText>
            <subreport>
                <reportElement x="0" y="690" width="400" height="60"/>
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{topArtistas})]]></dataSourceExpression>
                <subreportExpression><![CDATA["src/main/resources/static/subrelatorio_top_artistas.jasper"]]></subreportExpression>
            </subreport>
        </band>
    </detail>

</jasperReport>
